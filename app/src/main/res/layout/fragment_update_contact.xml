<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/record_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp"
    app:layout_constraintTop_toTopOf="parent"
    android:background="@color/background">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="65dp"
        android:lineHeight="22sp"
        android:text="Add contact to connect with friends"
        android:textColor="@color/font_color"
        android:textFontWeight="400"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/phoneNo"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="105dp"
        android:background="@drawable/box"
        android:hint="Enter Contact number"
        android:inputType="number"
        android:padding="12dp"
        android:textColorHint="@color/font_color"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/OtpButton"
        android:layout_width="182dp"
        android:layout_height="60dp"
        android:layout_marginTop="175dp"
        android:backgroundTint="@color/green"
        android:text="Get OTP"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:cornerRadius="5.333dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/otpLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/OtpButton">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:weightSum="4"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <EditText
            android:id="@+id/otp_box1"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginEnd="10dp"
            android:gravity="center"
            android:inputType="number"
            android:maxLines="1"
            android:maxLength="1"
            android:textStyle="bold"
            android:textSize="30sp"
            android:background="@drawable/box"
            android:textColor="@color/white"
            android:layout_weight="1"
            app:cornerRadius="10dp" />

        <EditText
            android:id="@+id/otp_box2"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginEnd="10dp"
            android:gravity="center"
            android:inputType="number"
            android:maxLines="1"
            android:maxLength="1"
            android:textStyle="bold"
            android:textSize="30sp"
            android:background="@drawable/box"
            android:textColor="@color/white"
            android:layout_weight="1"
            app:cornerRadius="10dp" />

        <EditText
            android:id="@+id/otp_box3"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginEnd="10dp"
            android:gravity="center"
            android:inputType="number"
            android:maxLines="1"
            android:maxLength="1"
            android:textStyle="bold"
            android:textSize="30sp"
            android:background="@drawable/box"
            android:textColor="@color/white"
            android:layout_weight="1"
            app:cornerRadius="10dp" />

        <EditText
            android:id="@+id/otp_box4"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginEnd="10dp"
            android:gravity="center"
            android:inputType="number"
            android:maxLines="1"
            android:maxLength="1"
            android:textStyle="bold"
            android:textSize="30sp"
            android:background="@drawable/box"
            android:textColor="@color/white"
            android:layout_weight="1"
            app:cornerRadius="10dp"/>
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Didn't receive an OTP ?"
        android:textColor="@color/font_color"
        android:textSize="16sp"
        android:textFontWeight="400"
        android:lineHeight="22sp"
        android:layout_marginTop="115dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
        android:id="@+id/timerTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Resend in 05:00 mins"
        android:textSize="16sp"
        android:textFontWeight="600"
        android:textColor="@color/font_color"
        android:lineHeight="22sp"
        android:layout_marginTop="160dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/resend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Resend"
            android:textSize="14sp"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            android:textColor="@color/green"
            android:lineHeight="22sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/timerTextView"
            android:textAlignment="center"/>

        <Button
        android:id="@+id/VerifyButton"
        android:layout_width="182dp"
        android:layout_height="60dp"
        android:layout_marginTop="212dp"
        android:backgroundTint="@color/green"
        android:text="Verify"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:cornerRadius="5.333dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>