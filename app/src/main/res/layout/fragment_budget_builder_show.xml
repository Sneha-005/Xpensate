<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/debtsAndLends_entry"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/background">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:padding="16dp"
        android:layout_marginBottom="250dp"
        android:background="@drawable/background_border"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/amount"
            android:layout_width="105dp"
            android:layout_height="52dp"
            android:hint="00.00"
            android:textColorHint="@color/font_color"
            android:gravity="center"
            android:textSize="24sp"
            android:textFontWeight="500"
            android:lineHeight="36sp"
            android:inputType="numberDecimal"
            android:background="@drawable/box"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <TextView
            android:id="@+id/edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textFontWeight="500"
            android:lineHeight="36sp"
            android:text="Edit"
            android:textColor="@color/green"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/head"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add Monthly Budget"
            android:textSize="16sp"
            android:textFontWeight="400"
            android:textColor="@color/font_color"
            android:lineHeight="22sp"
            android:layout_marginTop="70dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:textAlignment="center"/>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:stretchColumns="3"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="110dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TableRow
                android:paddingVertical="10dp">
                <ImageView
                    android:id="@+id/categoryImage"
                    android:layout_width="54dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:padding="3dip"
                    android:src="@drawable/category_icon"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" />
                <TextView
                    android:layout_width="120dp"
                    android:id="@+id/categoryText"
                    android:text="Category"
                    android:padding="3dip"
                    android:gravity="center"
                    android:textSize="16sp"
                    android:textFontWeight="600"
                    android:lineHeight="22sp"
                    android:textColor="@color/green" />
                <TextView
                    android:layout_width="50dp"
                    android:text="%"
                    android:gravity="center"
                    android:textSize="16sp"
                    android:textFontWeight="600"
                    android:lineHeight="22sp"
                    android:textColor="@color/green"
                    android:padding="3dip" />
                <TextView
                    android:gravity="center"
                    android:text="Amount"
                    android:textSize="16sp"
                    android:textFontWeight="600"
                    android:lineHeight="22sp"
                    android:textColor="@color/green"
                    android:padding="3dip" />
            </TableRow>
            <TableRow
                android:paddingVertical="10dp">
                <ImageView
                    android:id="@+id/needsImage"
                    android:layout_width="54dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:padding="3dip"
                    android:src="@drawable/needs_icon"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" />
                <TextView
                    android:layout_width="120dp"
                    android:text="Needs"
                    android:padding="3dip"
                    android:gravity="center"
                    android:textSize="16sp"
                    android:textFontWeight="600"
                    android:lineHeight="22sp"
                    android:textColor="@color/font_color" />
                <TextView
                    android:id="@+id/needsText"
                    android:layout_width="50dp"
                    android:gravity="center"
                    android:textSize="16sp"
                    android:textFontWeight="600"
                    android:lineHeight="22sp"
                    android:textColor="@color/font_color"
                    android:padding="3dip" />
                <TextView
                    android:id="@+id/needAmount"
                    android:gravity="center"
                    android:text="00.00"
                    android:textSize="16sp"
                    android:textFontWeight="600"
                    android:background="@android:color/transparent"
                    android:lineHeight="22sp"
                    android:textColor="@color/font_color"
                    android:padding="3dip" />
            </TableRow>
            <TableRow
                android:paddingVertical="10dp">
                <ImageView
                    android:id="@+id/LuxuryImage"
                    android:layout_width="54dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:padding="3dip"
                    android:src="@drawable/luxury_icon"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" />
                <TextView
                    android:layout_width="120dp"
                    android:text="Luxury"
                    android:padding="3dip"
                    android:gravity="center"
                    android:textSize="16sp"
                    android:textFontWeight="600"
                    android:lineHeight="22sp"
                    android:textColor="@color/font_color" />
                <TextView
                    android:id="@+id/luxuryText"
                    android:layout_width="50dp"
                    android:gravity="center"
                    android:textSize="16sp"
                    android:textFontWeight="600"
                    android:lineHeight="22sp"
                    android:textColor="@color/font_color"
                    android:padding="3dip" />
                <TextView
                    android:id="@+id/luxuryAmount"
                    android:gravity="center"
                    android:text="00.00"
                    android:textSize="16sp"
                    android:textFontWeight="600"
                    android:background="@android:color/transparent"
                    android:lineHeight="22sp"
                    android:textColor="@color/font_color"
                    android:padding="3dip" />
            </TableRow>
            <TableRow
                android:paddingVertical="10dp">
                <ImageView
                    android:id="@+id/savingImage"
                    android:layout_width="54dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:padding="3dip"
                    android:src="@drawable/saving_icon"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" />
                <TextView
                    android:layout_width="120dp"
                    android:text="Saving"
                    android:padding="3dip"
                    android:gravity="center"
                    android:textSize="16sp"
                    android:textFontWeight="600"
                    android:lineHeight="22sp"
                    android:textColor="@color/font_color" />
                <TextView
                    android:id="@+id/savingText"
                    android:layout_width="50dp"
                    android:gravity="center"
                    android:textSize="16sp"
                    android:textFontWeight="600"
                    android:lineHeight="22sp"
                    android:textColor="@color/font_color"
                    android:padding="3dip" />
                <TextView
                    android:id="@+id/savingAmount"
                    android:gravity="center"
                    android:text="00.00"
                    android:textSize="16sp"
                    android:textFontWeight="600"
                    android:background="@android:color/transparent"
                    android:lineHeight="22sp"
                    android:textColor="@color/font_color"
                    android:padding="3dip" />
            </TableRow>
        </TableLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="267dp"
            app:cardElevation="5dp"
            app:cardCornerRadius="8dp"
            android:backgroundTint="#343446"
            android:layout_marginTop="355dp"
            android:layout_marginBottom="48dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Income vs Expense"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:padding="15dp"
                android:lineHeight="30sp"
                android:textFontWeight="400" />

            <com.github.mikephil.charting.charts.BarChart
                android:id="@+id/barChart"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="55dp"
                android:layout_marginHorizontal="16dp" />
        </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>