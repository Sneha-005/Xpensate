<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".CurrencyConverter"
    android:background="@color/background">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="17dp"
        android:layout_marginRight="17dp"
        android:background="@color/background">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.026" />

        <ImageButton
            android:id="@+id/drawer_icon_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/humburger_white"
            android:contentDescription="@string/open_drawer"
            app:layout_constraintTop_toBottomOf="@id/guideline_top"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/currencyHead"/>

        <TextView
            android:id="@+id/currencyHead"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="Currency Converter"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textFontWeight="500"
            android:layout_marginLeft="18dp"
            android:lineHeight="30sp"
            app:layout_constraintTop_toBottomOf="@id/guideline_top"
            app:layout_constraintStart_toEndOf="@id/drawer_icon_button"/>

        <androidx.cardview.widget.CardView
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="262dp"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            app:cardElevation="5dp"
            app:cardCornerRadius="16dp"
            android:layout_marginTop="26dp"
            android:id="@+id/cardItem"
            android:backgroundTint="#343446"
            app:layout_constraintTop_toBottomOf="@id/currencyHead"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/swap"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:textColor="@color/white"
                    android:paddingTop="16dp"
                    android:textFontWeight="500"
                    android:lineHeight="30sp"
                    android:layout_marginLeft="15dp"
                    android:text="Swap"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintHorizontal_chainStyle="packed"/>

                <androidx.cardview.widget.CardView
                    android:id="@+id/card1"
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="match_parent"
                    android:layout_height="84dp"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    app:cardElevation="5dp"
                    app:cardCornerRadius="16dp"
                    android:layout_marginLeft="18dp"
                    android:layout_marginRight="18dp"
                    android:layout_marginTop="20dp"
                    android:backgroundTint="@color/inner_box"
                    app:layout_constraintTop_toBottomOf="@id/swap"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="From"
                    android:textSize="14sp"
                    android:textColor="@color/white"
                    android:textFontWeight="400"
                    android:lineHeight="20sp"
                    android:paddingTop="10dp"
                    android:layout_marginLeft="28dp"/>
                <EditText
                    android:layout_width="140dp"
                    android:layout_height="44dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="18dp"
                    android:paddingLeft="18dp"
                    android:textColorHint="@color/white"
                    android:layout_marginTop="34dp"
                    android:textSize="24sp"
                    android:inputType="numberDecimal"
                    android:hint="00.00"
                    android:lineHeight="36sp"
                    android:textFontWeight="500"
                    android:background="@drawable/background_border"
                    android:backgroundTint="@color/inner_box"
                    app:layout_constraintStart_toStartOf="parent"/>

                    <Button
                        android:id="@+id/from"
                        android:layout_width="148dp"
                        android:layout_height="50dp"
                        android:layout_marginTop="17dp"
                        android:layout_marginRight="10dp"
                        android:paddingLeft="10dp"
                        android:background="@drawable/currency_select"
                        android:layout_gravity="end"
                        android:text="JPY"
                        android:textSize="20sp"
                        android:paddingRight="25dp"
                        android:lineHeight="30sp"
                        android:textFontWeight="400"
                        android:drawableEnd="@drawable/down_arrow"
                        android:drawableStart="@drawable/jpy" />


                </androidx.cardview.widget.CardView>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/currency_converter"
                    android:layout_marginTop="140dp"
                    android:translationZ="15dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <androidx.cardview.widget.CardView
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="match_parent"
                    android:layout_height="84dp"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    app:cardElevation="5dp"
                    app:cardCornerRadius="16dp"
                    android:layout_marginLeft="18dp"
                    android:layout_marginRight="18dp"
                    android:layout_marginTop="16dp"
                    android:backgroundTint="@color/inner_box"
                    app:layout_constraintTop_toBottomOf="@id/card1"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="To"
                        android:textSize="14sp"
                        android:textColor="@color/white"
                        android:textFontWeight="400"
                        android:lineHeight="20sp"
                        android:paddingTop="10dp"
                        android:layout_marginLeft="28dp"/>

                    <EditText
                        android:layout_width="140dp"
                        android:layout_height="44dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="18dp"
                        android:paddingLeft="18dp"
                        android:textColorHint="@color/white"
                        android:layout_marginTop="34dp"
                        android:textSize="24sp"
                        android:inputType="numberDecimal"
                        android:hint="00.00"
                        android:lineHeight="36sp"
                        android:textFontWeight="500"
                        android:background="@drawable/background_border"
                        android:backgroundTint="@color/inner_box"
                        app:layout_constraintStart_toStartOf="parent"/>

                    <Button
                        android:id="@+id/to"
                        android:layout_width="148dp"
                        android:layout_height="50dp"
                        android:layout_marginTop="17dp"
                        android:paddingRight="25dp"
                        android:paddingLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/currency_select"
                        android:layout_gravity="end"
                        android:text="INR"
                        android:textSize="20sp"
                        android:lineHeight="30sp"
                        android:textFontWeight="400"
                        android:drawableEnd="@drawable/down_arrow"
                        android:drawableStart="@drawable/inr"/>


                </androidx.cardview.widget.CardView>
            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:id="@+id/currency_container"
            android:layout_marginTop="370dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>


    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>